# Project
PROJECT_NAME = OpenIsles

# Input/Output
INPUT = ${CMAKE_SOURCE_DIR}/src/cpp ${CMAKE_SOURCE_DIR}/test/cpp
EXCLUDE = ${CMAKE_SOURCE_DIR}/src/cpp/rapidxml
RECURSIVE = YES
IMAGE_PATH = ${CMAKE_SOURCE_DIR}/doc/doxygen-images
OUTPUT_DIRECTORY = ${CMAKE_SOURCE_DIR}/doxygen
OUTPUT_LANGUAGE = German

# Was soll alles in die Doku rein
EXTRACT_PRIVATE = YES
EXTRACT_STATIC = YES

# Ausgabe
GENERATE_HTML = YES
HTML_OUTPUT = .
HTML_FILE_EXTENSION = .html
SEARCHENGINE = YES
VERBATIM_HEADERS = NO
SHOW_USED_FILES = NO

GENERATE_LATEX = NO

# Graphen brauchen zu lange zum Generieren und bringen nicht wirklich einen Nutzen
HAVE_DOT = NO

# Sonstiges
CASE_SENSE_NAMES = NO     # immer Kleinbuchstaben-Dateinamen verwenden
WARNINGS = YES
PREDEFINED = DEBUG DEBUG_A_STAR DEBUG_ECONOMICS DEBUG_GUIMAP DEBUG_GUIMAP_COORDS
