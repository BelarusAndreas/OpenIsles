<?xml version="1.0" encoding="UTF-8"?>
<carriers>
    <!-- einfacher TrÃ¤ger -->
    <carrier name="carrier">
        <capacity>4</capacity>
        <animations>
            <animation carrier-state="running" graphic-set="carrier" />
        </animations>
    </carrier>

    <!-- Marktkarren -->
    <carrier name="cart">
        <capacity>6</capacity>
        <animations>
            <animation carrier-state="without-cargo" graphic-set="cart-without-cargo" />
            <animation carrier-state="with-cargo" graphic-set="cart-with-cargo" />
        </animations>
    </carrier>

    <!-- Schaf -->
    <carrier name="sheep">
        <capacity>4</capacity>
        <seconds-to-produce>18</seconds-to-produce>
        <!-- TODO animations auslesen -->
        <animations>
            <walking-animation carrier-state="walking" graphic-set="sheep" />
        </animations>
    </carrier>

    <!-- Rinder -->
    <carrier name="cattle">
        <capacity>3</capacity>
        <seconds-to-produce>17</seconds-to-produce>
        <!-- TODO animations auslesen -->
        <animations>
            <walking-animation carrier-state="walking" graphic-set="cattle" />
        </animations>
    </carrier>
</carriers>